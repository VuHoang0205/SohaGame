<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="110dp"
    android:background="@drawable/notify_body"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">
    <!--drawable/notify_body-->

    <LinearLayout
        android:id="@+id/lnLoginMobile"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/mobile_login_body">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/logInMobile"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnLoginfaceBook"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/facebook_login_body">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/logInFacebook"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>

